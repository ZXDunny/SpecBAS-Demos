ZXASCII
AUTO -1
PROG /demos/Graphics/flower
CHANGED FALSE
10 degrees: screen lock
20 XRadius=200,YRadius=200,a=0,
 Cx=scrw/2,Cy=scrh/2,Leaves=20
30 dim figure(360,2) base 0:
40 for angle=0 to 359:
    x=(20+XRadius*Cos(Leaves/2*angle))*Cos angle,
    y=(35+YRadius*Cos(Leaves/2*angle))*Sin angle:
    figure(angle,0)=Cx+x,
    figure(angle,1)=Cy+y
50 next angle
60 polygon ink 2;figure() fill;ink 0;figure()

