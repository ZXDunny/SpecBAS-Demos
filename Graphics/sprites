ZXASCII
AUTO -1
PROG demos:graphics/sprites
CHANGED FALSE
10 d=4,p=getopt "cpaper",numspr=64:
 DIM spr(numspr):
 GO SUB 80:
 FOR f=1 TO numspr:
    INK f MOD 16:
    PRINT AT 0,0;"בג"'"דה":
    WINDOW GRAB a$,0,0,0,16,16 TRANSPARENT p:
    PRINT AT 0,0;"וז"'"חט":
    WINDOW GRAB b$,0,0,0,16,16 TRANSPARENT p:
    PRINT AT 0,0;"יך"'"כל":
    WINDOW GRAB c$,0,0,0,16,16 TRANSPARENT p
20    SPRITE NEW spr(f),0,0
30    SPRITE ADDFRAME spr(f),a$ PAUSE d:
    SPRITE ADDFRAME spr(f),b$ PAUSE d:
    SPRITE ADDFRAME spr(f),a$ PAUSE d:
    SPRITE ADDFRAME spr(f),c$ PAUSE d
40    SPRITE SHOW spr(f):
 NEXT f:
 CLS
50 FOR f=1 TO numspr:
    SPRITE SCALE spr(f),(RND*10)+0.5 FRAMES 100
60    SPRITE MOVE spr(f) TO (RND*(SCRw+160))-80,(RND*(SCRh+160))-80 FRAMES 100:
    SPRITE ROTATE spr(f),(RND*24)-12 FRAMES 100
70 NEXT f:
 PAUSE 100:
 GO TO 50

80 FOR f=UDG "a" TO UDG "a"+(12*64)-1:
    READ a:
    POKE 1,f,a:
 NEXT f

