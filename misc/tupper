ZXASCII
AUTO -1
PROG /demos/misc/tupper
CHANGED FALSE
10 REM Tupper's Formula on ZX Spectrum by Matthew Logue
20 PRINT "TUPPER's FORMULA ON SpecBAS"
30 LET c=0: LET done=0: origin flip: ms=msecs
40 LET k$=""
50 LET d=17
60 GO SUB 160
70 LET k$=a$
80 LET d=2
90 LET f=VAL k$(LEN k$)
100 IF c<1799 THEN GO SUB 160: LET k$=a$
110 IF c=1799 THEN LET done=1
120 IF f-2*INT (f/2) THEN rectangle 236-2*INT (c/17),450-2*(c-17*INT (c/17)),2,2
130 LET c=c+1
140 IF done THEN GO TO 280
150 GO TO 90
160 LET a$=""
170 LET i=1
180 LET t=VAL k$(i)
190 do while t<d: t=t*10+VAL k$(i+=1): loop
200 LET i=i+1
210 IF LEN k$>(i-1) THEN LET a$=a$+STR$ INT (t/d): LET t=(t-d*INT (t/d))*10+VAL k$(i): LET i=i+1: GO TO 210
220 LET i=i+1
230 LET a$=a$+STR$ INT (t/d)
240 RETURN
250 REM This subroutine is a long string integer divider
260 REM k$=Long Integer ; d=divisor ; t=temporary number
270 REM i=index ; a$=Answer
280 print at 10,0;"Took ";using$("#.##",(msecs-ms)/1000);" secs."
