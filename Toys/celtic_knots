AUTO -1
PROG demos:toys/celtic_knots
CHANGED FALSE
10 DIM rule$="ABCDDD HHAKKANNN AANBNC DD",
           " DDDEFDGFGDEG XX GGXZXYXYZ",
           " NN XX NPQNOQNOPQQQTTVVXXX",
           "AAA GGGAJJAMM QQQRSQSQR GG"
20 font new fnt,20,20,0:
 addr=code "A"*400:
 for i=0 to 51:
    read d$: l$="":
    for j=1 to 49 step 2:
       l$=l$+lpad$(bin$(val("$"+mid$(d$,j,2))),"0",8):
    next j:
    for j=addr to addr+199:
       poke fnt,j,val l$(j-addr+1):
    next j:
    addr+=len l$:
 next i:
 font fnt
30 i=int(rnd*4)+12,p=int(rnd*4): 
 paper p: ink i: cls 0:
 gw,gh=(int(rnd*9)+2)*2,
 cx=(scrw-gw*20)/2,cy=((scrh-gh*20)/2)-40:
 dim g(gw,gh),k(gw,gh),g$(gh):
 for y=1 to gh step 2:
    g$(y)="LW"*(gw/2),
    g$(y+1)="UI"*(gw/2):
 next y:
 for x=1 to gw: g(x,1)|=4,g(x,gh)|=8,k(x,1)=1,k(x,gh)=1: next x:
 for y=1 to gh: g(1,y)|=1,g(gw,y)|=2,k(1,y)=2,k(gw,y)=1: next y:
 sym=int(rnd*3):
 if sym=0 then
    limx=gw-1,limy=gh/2
 else
    if sym=1 then
       limx=gw/2,limy=gh-1
    else
       if sym=2 then
          limx=gw/2,limy=gh/2
40 for y=1 to limy:
    for x=1+odd y to limx step 2
50       k=int(rnd*2),kx=x,ky=y:
       GO SUb 90:
       if sym=0 or sym=2 then
          ky=gh-ky:
          GO SUB 90:
       end if:
       if sym=1 or sym=2 then
          kx=gw-kx:
          GO SUb 90:
       end if:
       if sym=2 then
          ky=gh-ky:
          GO SUb 90:
       END IF:
    next x:
 next y
60 GO SUB 80:
 rectangle ink i;cx-4,cy+16,gw*20+8,gh*20+8 fill:
 font fnt:
 FOR y=1 TO gh:
    TEXT move cx,cy+(y*20);g$(y):
 NEXT y
70 font 1:
 print paper 0; ink 15; centre txth-3;"Press any key":
 wait screen: pause 0:
 GO To 30
80 for x=1 to gw:
    for y=1 to gh:
       a=g(x,y):
       for n=0 to 3:
          if a & 2^n<>0 then
             g$(y)(x)=rule$(n+1)(code g$(y)(x)-64):
          end if:
       next n:
    next y:
 next x:
 return
90 if k=1 then
    g(kx,ky)|=8,g(kx+1,ky)|=8,
    g(kx,ky+1)|=4,g(kx+1,ky+1)|=4:
 else 
    if k=2 then
       g(kx,ky)|=2,g(kx+1,ky)|=1,
       g(kx,ky+1)|=2,g(kx+1,ky+1)|=1
100 k(kx,ky)|=k,k(kx+1,ky)|=k,k(kx+1,ky+1)|=k,k(kx,ky+1)|=k:
 return
