CHANGED FALSE
10 DIM rule$="ABCDDD HHAKKANNN AANBNC DD",
           " DDDEFGDFGDEG XX GGXZXYXYZ",
           " NN XX NPQNOQNOPQQQTTVVXXX",
           "AAA GGGAJJAMM QQQRSQSQR GG":
     exit$="25282827262624373634373634"+
           "57656545151548184818471717":
 DIM d(8,3):
 for f=1 to 8:
    read d(f,1),d(f,2),d(f,3):
 next f:
 data -1,-1,8,0,-1,7,1,-1,6,-1,0,5,1,0,4,-1,1,3,0,1,2,1,1,1
20 font new fnt,20,20,0:
 addr=code "A"*400:
 for i=0 to 51:
    read d$: l$="":
    for j=1 to 49 step 2:
       l$=l$+lpad$(bin$(val("$"+mid$(d$,j,2))),"0",8):
    next j:
    for j=addr to addr+199:
       poke fnt,j,val l$(j-addr+1):
    next j:
    addr+=len l$:
 next i:
 font fnt:
 cm=1
30 i=int(rnd*4)+12,p=int(rnd*4):
 paper p: ink i: cls 0:
 gw,gh=(int(rnd*9)+2)*2,
 cx=(scrw-gw*20)/2,cy=((scrh-gh*20)/2)-40:
 dim g(gw,gh),g$(gh):
 g$(1)="N"+"VO"*(gw/2-1)+"X":
 for y=2 to gh-1 step 2:
    g$(y)="B"+("IU"*((gw/2)-1))+"F",
    g$(y+1)="K"+("WL"*((gw/2)-1))+"Y":
 next y:
 g$(gh)="A"+"JS"*(gw/2-1)+"G":
 sym=int(rnd*3),rs=int(rnd*2)*(gw>4):
 if sym=0 then
    limx=gw-1,limy=gh/2-rs
 else
    if sym=1 then
       limx=gw/2-rs,limy=gh-1
    else
       if sym=2 then
          limx=gw/2-rs,limy=gh/2-rs
40 for y=1 to limy:
    for x=1+odd y to limx step 2
50       k=int(rnd*5),kx=x,ky=y:
       if k=1 or k=2 then
          GO SUb 100:
          if sym=0 then
             ky=gh-ky:
             if rs then kx=gw-kx: end if:
             GO SUB 100:
          else
             if sym=1 then
                kx=gw-kx:
                if rs then ky=gh-ky: end if:
                GO SUb 100:
             else
                ky=gh-ky:
                GO SUb 100:
                kx=gw-kx:
                GO SUb 100:
                ky=gh-ky:
                GO SUb 100:
             END IF:
          end if:
       end if:
    next x:
 next y
60 GO SUB 90
70 rectangle ink i-8;cx-4,cy+16,gw*20+8,gh*20+8 fill:
 font fnt:
 FOR y=1 TO gh:
    TEXT ink i;move cx,cy+(y*20);g$(y):
 NEXT y:
 if cm then
    GO SUb 120:
    fill ink i-8;cx-4,cy+16
80 font 1:
 print paper 0; ink 13+2*(1-cm);centre txth-4;"press c to toggle colour mode";ink 15; centre txth-3;"Press any other key for new knot":
 do:
    wait keydown:
    a$=inkey$:
    if a$="c" then 
       cm=1-cm:
       GO To 70:
    end if:
 loop until a$<>"":
 GO To 30
90 For x=1 to gw:
    for y=1 to gh:
       for n=0 to 3:
          if g(x,y) & 2^n<>0 then
             g$(y,x)=rule$(n+1)(code g$(y,x)-64):
          end if:
       next n:
    next y:
 next x:
 return
100 if k=1 then
    g(kx,ky)|=8,g(kx+1,ky)|=8,
    g(kx,ky+1)|=4,g(kx+1,ky+1)|=4:
 else
    if k=2 then
       g(kx,ky)|=2,g(kx+1,ky)|=1,
       g(kx,ky+1)|=2,g(kx+1,ky+1)|=1
110 return
120 for x=1 to gw:
    for y=1 to gh:
       g(x,y)=(x=1 and y=1)*i:
    next y:
 next x:
 x,y,sx,sy=1,pin,mi=0:
 dim ip(7)
130 kx=x,ky=y:GO SUb 180:
 if sym=0 then
    ky=gh-y+1:
    if rs then kx=gw-x+1: end if:
    GO SUb 180:
 else
    if sym=1 then
       kx=gw-x+1:
       if rs then ky=gh-y+1: end if:
       GO SUB 180:
    else
       kx=x,
       ky=gh-y+1:  GO SUb 180:
       kx=gw-kx+1: GO SUb 180:
       ky=gh-ky+1: GO SUb 180:
    END IF:
140 e=(code g$(y,x)-64)*2-1,e$=exit$(e to e+1),e=val e$(1):
 if e<>pin then
    x+=d(e,1),y+=d(e,2)
 else
    e=val e$(2):
    x+=d(e,1),y+=d(e,2)
150 IF x<>sx or y<>sy THEN
    pin=d(e,3):
    GO To 130
160 sx+=1:
 if sx>gw then
    sx=1:
    sy+=1:
    if sy>gh then
       mx,i=0:
       for f=1 to 7:
          if ip(f)>mx then
             mx=ip(f),i=f:
          end if:
       next f:
       i+=8:
       return
170 IF g(sx,sy)>0 THEN
    GO To 160
 else
    x=sx,y=sy,i=iif(i<15,i+1,12):
    GO To 130
180 fill ink i;cx+kx*20-10,cy+ky*20+10:
 g(kx,ky)=i,ip(i-8)+=1:
 return
