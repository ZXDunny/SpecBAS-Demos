ZXASCII
AUTO -1
PROG demos:colour/alphatest
CHANGED FALSE
10 FOR f=0 TO 63: POKE 1,f+udg "z",(int(f/8)&1)+f&1: NEXT f
20 FOR f=1 TO SCRw/FONTw*SCRh/FONTh: PRINT INK RND*255;PAPER RND*255;"ú";: NEXT f
30 WINDOW NEW w,10,10,256,256 BPP 32 ALPHA:
 FOR x=0 TO 255;y=0 TO 255:
    PLOT INK $0080FF+(((x+y)/2) SHL 24);x,y:
 NEXT y;x:
 WINDOW 0
40 WINDOW ROLL 0,-1,-1
50 WINDOW MOVE w,mousex-128,mousey-128:
 WAIT SCREEN:
 PALETTE SHL 1,0 TO 255:
 GO TO 40
